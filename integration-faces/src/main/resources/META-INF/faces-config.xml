<?xml version="1.0" encoding="UTF-8"?>

<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
   version="2.0">
   
   <factory>
      <exception-handler-factory>com.ocpsoft.rewrite.faces.ConversationExceptionHandlerFactory</exception-handler-factory>
   </factory>
   
   <application>
      <navigation-handler>com.ocpsoft.rewrite.faces.RewriteNavigationHandler</navigation-handler>
      <view-handler>com.ocpsoft.rewrite.faces.RewriteViewHandler</view-handler>
   </application>

</faces-config>
