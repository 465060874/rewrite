<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<arquillian xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xmlns="http://jboss.org/schema/arquillian"
   xsi:schemaLocation="http://jboss.org/schema/arquillian http://jboss.org/schema/arquillian/arquillian_1_0.xsd">

   <extension qualifier="webdriver">
      <property name="browserCapabilities">htmlunit</property>
   </extension>

   <container qualifier="jbossas_managed">
      <protocol type="Servlet 3.0">
         <property name="executionType">MANAGED</property>
      </protocol>
      <configuration>
         <property name="serverConfig">jbossas-managed-standalone.xml</property>
         <property name="jbossHome">target/container/jboss-as-7.1.1.Final/</property>
         <property name="allowConnectingToRunningServer">true</property>
      </configuration>
   </container>

   <container qualifier="tomcat_managed">
      <configuration>
         <property name="catalinaHome">target/container/apache-tomcat-7</property>
         <property name="bindHttpPort">38080</property>
         <property name="user">arquillian</property>
         <property name="pass">arquillian</property>
      </configuration>
   </container>

   <container qualifier="glassfish_managed" default="true">
      <configuration>
         <property name="glassFishHome">target/container/glassfish3</property>
         <property name="adminPort">34848</property>
      </configuration>
   </container>

   <container qualifier="tomee">
      <configuration>
         <property name="dir">target/container/tomee-1.5</property>
         <property name="httpPort">-1</property>
         <property name="ajpPort">-1</property>
         <property name="stopPort">-1</property>
         <property name="appWorkingDir">target/arquillian-test-working-dir</property>
      </configuration>
   </container>

</arquillian>
