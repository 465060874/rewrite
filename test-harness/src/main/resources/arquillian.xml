<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<arquillian xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://jboss.org/schema/arquillian"
   xsi:schemaLocation="http://jboss.org/schema/arquillian http://jboss.org/schema/arquillian/arquillian_1_0.xsd">

   <container qualifier="jetty" default="true">
      <configuration>
      </configuration>
   </container>

   <!--
    
     Add this to $CATALINA_HOME/conf/tomcat-users.xml:

       <role rolename="manager-script"/>
       <user username="arquillian" password="arquillian" roles="manager-script"/>
   
    -->
   <container qualifier="tomcat-managed-7">
      <configuration>
         <property name="catalinaHome">target/container/apache-tomcat-7</property>
         <property name="user">arquillian</property>
         <property name="pass">arquillian</property>
      </configuration>
   </container>

   <container qualifier="glassfish-managed-3.1">
      <configuration>
         <property name="glassFishHome">target/container/glassfish3</property>
      </configuration>
   </container>

</arquillian>